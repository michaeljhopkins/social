{
    "route": "/debug/",
    "paths": {
        "controllers": [
            {
                "name": "app",
                "path": "app/Http/Controllers",
                "enabled": true
            },
            {
                "name": "sketchpad",
                "path": "app/Http/Controllers/Debug",
                "enabled": true
            },
            {
                "name": "help/demo",
                "path": "vendor/davestewart/sketchpad/src/help/demo",
                "enabled": true
            },
            {
                "name": "help/docs",
                "path": "vendor/davestewart/sketchpad/src/help/docs",
                "enabled": true
            }
        ],
        "views": "resources/views/debug/",
        "assets": "public/vendor/debug/"
    },
    "site": {
        "name": "Sketchpad",
        "home": "welcome",
        "help": "help",
        "views": "",
        "search": true,
        "favourites": true
    },
    "livereload": {
        "preset": "local",
        "host": "localhost",
        "usePolling": false,
        "paths": []
    },
    "ui": {
        "humanizeText": true,
        "showComments": true,
        "showArchived": true,
        "formatCode": true,
        "scrollTop": true
    }
}